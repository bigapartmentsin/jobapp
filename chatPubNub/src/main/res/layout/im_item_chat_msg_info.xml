<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/p_10_t_10"
        android:layout_marginRight="@dimen/p_14_t_14"
        android:layout_marginTop="@dimen/p_10_t_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_iv_chat_msg_info_recipient"
            android:layout_width="@dimen/p_40_t_40"
            android:layout_height="@dimen/p_40_t_40"
            android:background="@drawable/im_ic_default_user_profile" />

        <TextView
            android:id="@+id/im_tv_chat_msg_info_recipient"
            android:layout_width="@dimen/p_40_t_40"
            android:layout_height="@dimen/p_40_t_40"
            android:background="@drawable/im_bg_circle_red"
            android:gravity="center"
            android:textColor="@color/im_white"
            android:textSize="@dimen/p_25_t_25"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/p_10_t_10"
            android:layout_marginStart="@dimen/p_10_t_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/im_tv_chat_msg_info_user_name"
                    style="@style/IMTextView_bold_mine_shaft_approx_p_14_t_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textColor="@color/im_thread_title_color" />

                <TextView
                    style="@style/IMTextView_grey_boulder_p_12_t_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/im_tv_chat_msg_info_user_name"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="@string/im_chat_delivered" />

                <TextView
                    android:id="@+id/im_tv_chat_msg_info_deliver_time"
                    style="@style/IMTextView_dove_gray_approx_p_10_t_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/im_tv_chat_msg_info_user_name"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/IMTextView_grey_boulder_p_12_t_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="@string/im_chat_read" />

                <TextView
                    android:id="@+id/im_tv_chat_msg_info_read_time"
                    style="@style/IMTextView_dove_gray_approx_p_10_t_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center" />


            </RelativeLayout>

            <View
                android:id="@+id/im_vi_chat_msg_info_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/p_1_t_1"
                android:layout_marginTop="@dimen/p_10_t_10"
                android:background="@color/im_thread_divider_color" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>