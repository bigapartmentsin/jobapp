<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/im_ll_user_text_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/p_5_t_5"
        android:layout_marginStart="@dimen/p_5_t_5"
        android:layout_marginTop="@dimen/p_15_t_15"
        android:background="@drawable/im_bg_msg_sender"
        android:orientation="vertical"
        android:padding="@dimen/p_10_t_10">

        <TextView
            android:id="@+id/im_tv_sender_text_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingEnd="@dimen/p_10_t_10"
            android:paddingRight="@dimen/p_10_t_10"
            android:textAppearance="?android:textAppearanceSmall"
            android:autoLink="web"
            android:textColor="@color/im_sender_chat_text_msg_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/p_5_t_5"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/p_10_t_10"
            android:paddingRight="@dimen/p_10_t_10">

            <TextView
                android:id="@+id/im_tv_sender_text_msg_time"
                style="@style/IMTextView_grey_boulder_p_10_t_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/p_5_t_5"
                android:paddingRight="@dimen/p_5_t_5" />

            <ImageView
                android:id="@+id/im_iv_sender_text_msg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="true"
                android:cropToPadding="true"
                android:scaleType="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>