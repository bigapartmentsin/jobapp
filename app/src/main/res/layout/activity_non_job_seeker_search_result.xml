<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.global.activities.NonJobSeekerSearchResultActivity">

    <RelativeLayout
        android:id="@+id/rlJobResult"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@drawable/dashboard_bg"/>

    <RelativeLayout
        android:id="@+id/rlSearchMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/back">
        </ImageView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_sort"
            android:layout_toLeftOf="@id/overflow"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:id="@+id/sort">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_overflow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:id="@+id/overflow">

        </ImageView>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jobResult_recyclerviewNonJobSeeker"
        android:layout_below="@id/rlJobResult"
        android:layout_above="@id/searchJobsRole"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/empty_states"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/rlJobResult"
        android:src="@drawable/nocadidatefound"
        android:layout_above="@id/searchJobsRole">


    </ImageView>


    <EditText
        android:id="@+id/searchJobsRole"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/bottom_search"
        android:ems="10"
        android:hint="Search People by Job Title, Keyword.."
        app:queryHint="@string/search_people_msg"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/button"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/button"

        android:layout_height="51dp">


        <TextView
            android:id="@+id/sendJobInvite"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:background="@drawable/send_invite"
            android:tag="true"
            android:visibility="gone"
            android:text="@string/send_job_invite"
            android:textColor="@color/white"
            />

    </LinearLayout>





</RelativeLayout>