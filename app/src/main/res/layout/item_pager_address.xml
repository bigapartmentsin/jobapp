<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/location_data"
        android:layout_width="216dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:background="@drawable/ic_location_textview"
        android:textAlignment="center"
        android:paddingTop="50dp"
        android:datePickerMode="spinner"
        android:paddingStart="8dp"
        android:text="This is my location data 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


    <LinearLayout
        android:layout_marginTop="125dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/location_data"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/yes_text"
            android:textColor="#8E63E6"
            android:layout_width="wrap_content"
            android:text="yes"
            android:padding="2dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/no_text"
            android:layout_width="wrap_content"
            android:textColor="#8E63E6"
            android:text="no"
            android:padding="2dp"
            android:layout_height="wrap_content">

        </TextView>


    </LinearLayout>

</RelativeLayout>