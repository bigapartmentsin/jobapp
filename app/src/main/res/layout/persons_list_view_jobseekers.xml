<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlJobRoles"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.abln.chat.utils.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/userIcon"
                    android:src="@drawable/person_icon">
                </com.abln.chat.utils.CircleImageView>

                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/userIcon"
                    android:textColor="@color/filterTextColor"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:text="Baskar Rao P" />

                <TextView
                    android:id="@+id/userDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/userIcon"
                    android:layout_below="@id/userNameText"
                    android:textColor="@color/textColorPh"
                    android:text="Android Developer" />

                <RadioButton
                    android:id="@+id/radioBtnSelectUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"/>

                <ImageView
                    android:id="@+id/rlActionImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_grey"
                    android:layout_below="@id/userDesignation"
                    android:layout_centerInParent="true"
                    android:rotation="90"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:id="@+id/distance"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/radioBtnSelectUser"
                    android:layout_marginEnd="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:layout_below="@id/distance"
                    android:background="@color/filterTextColor"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/resumeViewLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/pdfResumeView"
                    android:background="#C2BDBD"
                    android:text="View resume"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <ImageView
                    android:id="@+id/pdfclose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_close_black"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="experince"
                    android:id="@+id/totalExp"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/pdfBar"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_white_bar"/>

            </RelativeLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>

</RelativeLayout>