<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:padding="16dp"
    tools:context=".common.UCEDefaultActivity">



    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="center"
        android:text="OOP's..!"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorText" />


    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/ask_for_error_log"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/btnColorBlackPress" />

    <LinearLayout
        android:id="@+id/llActionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSubTitle"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSendLogs"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:drawableTop="@drawable/ic_share"
            android:gravity="center"
            android:text="SHARE"
            android:textColor="@color/text_color_white" />

        <TextView
            android:id="@+id/tvView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSendLogs"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_view"
            android:gravity="center"
            android:text="VIEW"
            android:textColor="@color/text_color_white" />

        <TextView
            android:id="@+id/tvCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSendLogs"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:drawableTop="@drawable/ic_copy"
            android:gravity="center"
            android:text="COPY"
            android:textColor="@color/text_color_white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_below="@+id/llActionLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:clickable="true"
        android:drawableTop="@drawable/ic_reload"
        android:text="Reload"
        android:gravity="center"
        android:textColor="@color/text_color_white" />

    <!--<include layout="@layout/clear_footer" />-->
</RelativeLayout>