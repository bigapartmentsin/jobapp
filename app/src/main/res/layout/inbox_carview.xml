<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/ic_search_bg_card_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="111dp"
            android:id="@+id/ivview"
            app:cardCornerRadius="13dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F6F6F6"
            android:backgroundTint="#F6F6F6"
            android:layout_height="165dp">


        <ImageView
            android:id="@+id/jobPostImageView"
            android:layout_width="111dp"
            android:layout_height="165dp"
           />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/designationTV"

            android:text="Full stack android developer"
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/im_black"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:layout_width="198dp"
            android:layout_height="51dp"
            android:layout_toRightOf="@id/ivview"/>


        <TextView
            android:id="@+id/expTV"
            android:layout_width="186dp"
            android:layout_height="18dp"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/color_gray"
            android:text="Experince 3-5 yrs"
            android:layout_toRightOf="@id/ivview"
            android:layout_below="@id/designationTV"
            android:layout_margin="5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/ivview"
            android:layout_below="@id/expTV">

            <TextView
                android:id="@+id/showTimerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:clickable="true"
                android:background="@drawable/ic_clock_running"/>

            <TextView
                android:id="@+id/shareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:background="@drawable/ic_share_btn"/>

            <TextView
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:background="@drawable/ic_delete_btn"/>

        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>