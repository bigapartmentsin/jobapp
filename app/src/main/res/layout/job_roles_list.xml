<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/shape_linear"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="150dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/rlJobRoles"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/jobRoleImg"
                android:layout_centerInParent="true"
                android:src="@drawable/iconfinder_2">
            </ImageView>

            <TextView
                android:id="@+id/jobRoleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software sade"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_below="@id/jobRoleImg"
                android:textSize="8dp"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>