<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >




        <ImageView

            android:id="@+id/jobPostImageView_"
                android:layout_width="108dp"
                android:layout_height="152dp"
            android:visibility="gone"
            android:src="@drawable/sample_job_post"

            />


        <ImageView
            android:layout_width="108dp"
            android:layout_height="152dp"


            android:id="@+id/jobPostImageView" />







        <TextView
            android:id="@+id/designationTV"
            android:layout_width="198dp"
            android:layout_height="51dp"
            android:text="Full stack android developer"
            android:gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/im_black"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:layout_toRightOf="@id/jobPostImageView"/>


        <TextView
            android:id="@+id/expTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/color_gray"

            android:layout_toRightOf="@id/jobPostImageView"
            android:layout_below="@id/designationTV"
            android:layout_margin="5dp"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2d"
           android:id="@+id/postdate"
             android:layout_marginTop="50dp"
            android:layout_toLeftOf="@+id/layout"
            android:layout_below="@id/expTV"
            android:textColor="@color/color_white"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/layout"
            android:layout_toRightOf="@id/jobPostImageView"
            android:layout_below="@id/expTV">




            <TextView
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:id="@+id/savedjob"

                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/star_selt_one"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/sharejobpost"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_share_btn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/applyjob"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
            />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>


