<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    >



    <RelativeLayout
        android:id="@+id/base_menu"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@drawable/top_bg">



        <RelativeLayout
            android:id="@+id/llchatMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="visible">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left_white"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_back_arrow_otheraccount"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_overflow"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:id="@+id/overflow"/>

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/base_menu"
        android:id="@+id/itemlist"
        android:gravity="center"
   android:paddingRight="34dp"
        android:paddingLeft="34dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="3rd Party Accounts"
            android:textColor="@color/AppColorName"
            >

        </TextView>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/linkedin_url"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Linkedin Url"
           >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/linkedin_url_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />




        </com.google.android.material.textfield.TextInputLayout>
        <ImageView

            android:id="@+id/copy_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_new"
            android:layout_gravity="end"


            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/other_new"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Other Url"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/other_new_textview"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>






        <ImageView

            android:id="@+id/copy_image_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_new"
            android:layout_gravity="end"

            />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/other_new_two"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Other Url"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/other_new_edittext"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>





        <ImageView

            android:id="@+id/copy_image_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_new"
            android:layout_gravity="end"
            />







        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/other_new_three"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Other Url"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/other_new_edittextthre"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>




        <ImageView

            android:id="@+id/copy_image_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_new"
            android:layout_gravity="end"

            />






    </LinearLayout>


</RelativeLayout>